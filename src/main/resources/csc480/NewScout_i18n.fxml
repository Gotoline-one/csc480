<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<Pane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="csc480.NewScoutController">
    <children>
        <VBox maxHeight="380.0" maxWidth="527.0" minHeight="380.0" minWidth="527.0" prefHeight="380.0"
              prefWidth="527.0">
            <children>
                <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="351.0" prefWidth="520.0" VBox.vgrow="ALWAYS">
                    <children>
                        <TextField fx:id="firstNameTxtBox" layoutX="106.0" layoutY="34.0" prefHeight="25.0"
                                   prefWidth="122.0" text="first"/>
                        <TextField fx:id="lastNameTxtBox" layoutX="231.0" layoutY="34.0" prefHeight="25.0"
                                   prefWidth="122.0" text="second"/>
                        <Label layoutX="29.0" layoutY="39.0" text="Name"/>
                        <Label layoutX="30.0" layoutY="75.0" text="Email"/>
                        <TextField fx:id="scoutEmail" layoutX="106.0" layoutY="70.0" prefHeight="25.0"
                                   prefWidth="246.0"/>
                        <Label layoutX="32.0" layoutY="110.0" text="Rank"/>
                        <TextField fx:id="scoutRank" layoutX="106.0" layoutY="105.0" prefHeight="25.0"
                                   prefWidth="246.0"/>
                        <TextField fx:id="scoutPosition" layoutX="106.0" layoutY="141.0" prefHeight="25.0"
                                   prefWidth="246.0"/>
                        <Label layoutX="22.0" layoutY="146.0" text="Position"/>
                        <ImageView fx:id="scoutImage" fitHeight="153.0" fitWidth="184.0" layoutX="353.0" layoutY="41.0"
                                   pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@silhouette.jpg"/>
                            </image>
                        </ImageView>
                        <Button fx:id="AddScoutPhotoBtn" layoutX="387.0" layoutY="233.0" maxHeight="-Infinity"
                                maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#addScoutPhoto" prefHeight="25.0" prefWidth="85.0" text="Add Photo"/>
                        <Button fx:id="addAwardsBtn" layoutX="16.0" layoutY="189.0" maxHeight="-Infinity"
                                maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#addAwards" prefHeight="25.0" prefWidth="66.0" text="Awards"/>
                        <Button fx:id="addBadgesBtn" layoutX="16.0" layoutY="233.0" maxHeight="-Infinity"
                                maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#addBadges" prefHeight="25.0" prefWidth="67.0" text="Badges"/>
                        <Button fx:id="NextBtn" layoutX="17.0" layoutY="300.0" maxHeight="-Infinity"
                                maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#nextScout" prefHeight="25.0" prefWidth="114.0" text="Save and Next"/>
                        <Button fx:id="cancelBtn" layoutX="172.0" layoutY="300.0" maxHeight="-Infinity"
                                maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                                onAction="#cancel" prefHeight="25.0" prefWidth="63.0" text="Cancel"/>
                        <Button fx:id="saveScoutBtn" layoutX="292.0" layoutY="300.0" mnemonicParsing="false"
                                onAction="#saveScout" prefHeight="25.0" prefWidth="50.0" text="Save"/>
                        <TextField fx:id="scoutAwards" editable="false" focusTraversable="false" layoutX="106.0"
                                   layoutY="189.0" prefHeight="25.0" prefWidth="246.0"/>
                        <TextField fx:id="scoutBadges" editable="false" focusTraversable="false" layoutX="106.0"
                                   layoutY="233.0" prefHeight="25.0" prefWidth="246.0"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</Pane>
