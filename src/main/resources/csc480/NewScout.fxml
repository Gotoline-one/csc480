<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<Pane xmlns:fx="http://javafx.com/fxml/1" prefHeight="380.0" prefWidth="558.0" xmlns="http://javafx.com/javafx/8"
      fx:controller="csc480.controller.NewScoutController">
    <children>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="380.0" prefWidth="570.0">
            <children>
                <Label text="Name" layoutX="29.0" layoutY="39.0"/>
                <TextField fx:id="firstNameTxtBox" layoutX="106.0" layoutY="34.0" prefHeight="25.0" prefWidth="122.0"
                           text="first"/>
                <TextField fx:id="lastNameTxtBox" layoutX="231.0" layoutY="34.0" prefHeight="25.0" prefWidth="122.0"
                           text="Second"/>
                <Label text="Email" layoutX="30.0" layoutY="75.0"/>
                <TextField fx:id="scoutEmail" layoutX="106.0" layoutY="70.0" prefHeight="25.0" prefWidth="246.0"
                           text="afds@asdf.com"/>

                <Label text="Rank" layoutX="32.0" layoutY="110.0"/>
                <ComboBox fx:id="rankCombo" layoutX="106.0" layoutY="105.0" prefHeight="25.0" prefWidth="246.0"/>
                <Label text="Position" layoutX="22.0" layoutY="146.0"/>
                <TextField fx:id="scoutPosition" layoutX="106.0" layoutY="141.0" prefHeight="25.0" prefWidth="246.0"/>
                <ImageView fx:id="scoutImage" fitHeight="160.0" fitWidth="153.0" layoutX="366.0" layoutY="34.0"
                           pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@silhouette_backup.jpg"/>
                    </image>
                </ImageView>
                <Button fx:id="AddScoutPhotoBtn" text="Add Photo" layoutX="400.0" layoutY="233.0" maxHeight="-Infinity"
                        maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                        onAction="#addScoutPhoto" prefHeight="25.0" prefWidth="85.0"/>
                <Button fx:id="addAwardsBtn" text="Awards" layoutX="16.0" layoutY="189.0" maxHeight="-Infinity"
                        maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                        onAction="#addAwards" prefHeight="25.0" prefWidth="66.0"/>
                <TextField fx:id="scoutAwards" layoutX="106.0" layoutY="189.0" editable="false" focusTraversable="false"
                           prefHeight="25.0" prefWidth="246.0"/>
                <Button fx:id="addBadgesBtn" text="Badges" layoutX="16.0" layoutY="233.0" maxHeight="-Infinity"
                        maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                        onAction="#addBadges" prefHeight="25.0" prefWidth="67.0"/>
                <TextField fx:id="scoutBadges" layoutX="106.0" layoutY="233.0" editable="false" focusTraversable="false"
                           prefHeight="25.0" prefWidth="246.0"/>
                <Button fx:id="saveScoutBtn" text="Save" layoutX="292.0" layoutY="300.0" mnemonicParsing="false"
                        onAction="#saveScout" prefHeight="25.0" prefWidth="50.0"/>
                <Button fx:id="NextBtn" text="Save New" layoutX="17.0" layoutY="300.0" maxHeight="-Infinity"
                        maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                        onAction="#nextScout" prefHeight="25.0" prefWidth="114.0"/>
                <Button fx:id="cancelBtn" text="Cancel" layoutX="172.0" layoutY="300.0" maxHeight="-Infinity"
                        maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                        onAction="#cancel" prefHeight="25.0" prefWidth="63.0"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </AnchorPane>
    </children>
</Pane>
